{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "players": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {"type": "integer"},
          "age": {"type": "integer"},
          "gender": {"type": "string"},
          "role": {"type": "string"},
          "screenName": {"type": "string"}
        },
        "required": ["id", "age", "gender", "role", "screenName"]
      }
    }
  },
  "required": ["players"]
}